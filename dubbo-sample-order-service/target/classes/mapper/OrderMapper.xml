<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.waynezw.order.mapper.OrderMapper">
    <insert id="create">
        INSERT INTO `order` (item_id, order_no)
        VALUES (#{itemId}, #{orderNo});
    </insert>
    <delete id="deleteById" parameterType="int">
        delete from  `order` where id = #{id}
    </delete>

    <select id="findById" parameterType="int" resultType="cn.waynezw.order.pojo.Order">
        SELECT * FROM  `order` WHERE id = #{id}
    </select>
    <select id="findAll" resultType="cn.waynezw.order.pojo.Order">
        select * from  `order`
    </select>
</mapper>